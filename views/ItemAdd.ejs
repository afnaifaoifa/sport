<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Item</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      padding: 0
    }
    form {
      max-width: 500px;
      margin: auto;
    }
    nav {
      background-color: #333;
      padding: 10px;
      margin-bottom: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100px;
      gap: 40px;

    }
    nav a {
      margin-right: 10px;
      color: white;
      text-decoration: none;
      font-family: 'Roboto Light', sans-serif;
        font-size: 20px;

    }
  </style>
</head>
<body>
<nav>
  <a href="/main" class="text-white">Main</a>
  <a href="/exercises" class="text-white">Exercise</a>
  <a href="/items-add-page" class="text-white">Create Items</a>
  <a href="/items-for-admin" class="text-white">Items</a>
  <a href="/logout" class="">Logout</a>

  <div id="google_translate_element"></div>

    <script type="text/javascript">
    function googleTranslateElementInit() {
    new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
    }
    </script>

    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</nav>
  <h1 class="text-center">Add New Item</h1>
  <form action="/add-item" method="POST">
    <div class="mb-3">
      <label for="pictures" class="form-label">Pictures (URLs, separated by commas)</label>
      <input type="text" class="form-control" id="pictures" name="pictures" required>
    </div>
    <div class="mb-3">
      <label for="name1" class="form-label">Name (KZ)</label>
      <input type="text" class="form-control" id="name1" name="name1" required>
    </div>
    <div class="mb-3">
      <label for="name2" class="form-label">Name (RU)</label>
      <input type="text" class="form-control" id="name2" name="name2" required>
    </div>
    <div class="mb-3">
      <label for="description1" class="form-label">Description (KZ)</label>
      <textarea class="form-control" id="description1" name="description1" rows="3" required></textarea>
    </div>
    <div class="mb-3">
      <label for="description2" class="form-label">Description (RU)</label>
      <textarea class="form-control" id="description2" name="description2" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add Item</button>
  </form>
</body>
</html>
